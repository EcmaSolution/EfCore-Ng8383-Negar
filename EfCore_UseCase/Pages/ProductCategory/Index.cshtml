@page
@model EfCore_UseCase.Pages.ProductCategory.Index
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
}
<div class="container my-5 text-center">
    <h3 class="display-4 mb-4 text-primary">لیست گروه محصولات</h3>
    <p>
        <a asp-page="./Create" class="btn btn-success btn-lg">ایجاد جدید</a>
    </p>

    <div class="table-responsive mt-4">
        <table class="table table-bordered table-hover table-striped shadow-sm">
            <thead class="thead-dark">
            <tr>
                <th scope="col">#</th>
                <th scope="col">نام</th>
                <th scope="col">تاریخ ایجاد</th>
                <th>ویرایش</th>
            </tr>
            </thead>
            <tbody>
            @foreach (var item in Model.ProductCategories)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Name</td>
                    <td>@item.CreationDate</td>
                    <td>

                        @* <a asp-page="./Edit" asp-route-id="@item.Id">ویرایش</a> *@
                        @* <a asp-page="Edit" asp-route="@item.Id">ویرایش</a> *@
                        <a class="btn btn-danger" asp-page="Edit" asp-route-id="@item.Id">ویرایش</a>

                    </td>

                </tr>
            }
            </tbody>
        </table>
    </div>
</div>